<odoo>
    <data>
        <!-- Renew Iqama Approval Form View -->
        <record id="view_approval_renew_iqama_form" model="ir.ui.view">
            <field name="name">flex.approval.renew_iqama.form</field>
            <field name="model">flex.approval.renew_iqama</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Submit for Approval" type="object" name="action_submit_for_approval"
                                invisible="state != 'draft'"/>
                        <button string="Approve Renewal" type="object" name="action_approve_renewal"
                                invisible="state in ('draft', 'rejected','approved')"/>
                        <button string="Reject Renewal" type="object" name="action_reject_renewal"
                                invisible="state in ('draft', 'rejected', 'approved')"/>
                        <field name="state" widget="statusbar" readonly="True"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_view_expenses" class="oe_stat_button" type="object" icon="fa-money"
                                    invisible="state not in ('hr_manager_approval','approved')">
                                <field name="expense_ids" widget="statinfo" string="Expenses"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" placeholder="Sequence"/>
                            <h1>
                                <field name="name" placeholder="Sequence"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="department_id" readonly="1"/>
                                <field name="current_iqama_id" readonly="1"/>
                                <field name="end_of_iqama" readonly="1"/>
                            </group>
                            <group>
                                <field name="new_iqama_id" readonly="state in ('approved','rejected')"
                                       required="state in ('hr_manager_approval','approved','rejected')"/>
                                <field name="renewal_date" readonly="state in ('approved','rejected')"
                                       required="state in ('hr_manager_approval','approved','rejected')"/>
                                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"
                                       class="g-col-8" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="note">
                                <field name="note" widget="html" readonly="state != 'draft'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Renew Iqama Approval Tree View -->
        <record id="view_approval_renew_iqama_tree" model="ir.ui.view">
            <field name="name">flex.approval.renew_iqama.tree</field>
            <field name="model">flex.approval.renew_iqama</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="current_iqama_id"/>
                    <field name="end_of_iqama"/>
                    <field name="new_iqama_id"/>
                    <field name="renewal_date"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Renew Iqama Approval Action -->
        <record id="action_approval_renew_iqama" model="ir.actions.act_window">
            <field name="name">Renew Iqama Approvals</field>
            <field name="res_model">flex.approval.renew_iqama</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
