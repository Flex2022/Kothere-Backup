<odoo>
    <data>
        <!-- Form View for Fleet Vehicle -->
        <record id="fleet_vehicle_form_view" model="ir.ui.view">
            <field name="name">fleet.vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_licenses"
                            string="Driving Licenses"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-id-card">
                        <field name="license_count" widget="statinfo"/>
                    </button>
                    <button name="action_view_insurances"
                            string="Vehicle Insurances"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-car">
                        <field name="vehicle_insurance_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

