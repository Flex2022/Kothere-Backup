<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_renew_vehicle_insurance_form" model="ir.ui.view">
        <field name="name">flex.approval.renew_vehicle_insurance.form</field>
        <field name="model">flex.approval.renew_vehicle_insurance</field>
        <field name="arch" type="xml">
            <form string="Renew Vehicle Insurance">
                <header>
                    <button name="action_submit_for_approval" type="object" string="Submit for Approval"
                            invisible="state != 'draft'"
                            class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve"
                            invisible="state != 'hr_manager_approval'"
                            class="btn-success"/>
                    <button name="action_reject" type="object" string="Reject"
                            invisible="state != 'hr_manager_approval'"
                            class="btn-danger"/>
                    <field name="state" widget="statusbar" readonly="True"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_expenses" class="oe_stat_button" type="object" icon="fa-money"
                                invisible="state not in ('approved')">
                            <field name="expense_ids" widget="statinfo" string="Expenses"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" placeholder="Sequence"/>
                        <h1>
                            <field name="name" placeholder="Sequence"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="employee_number" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="employee_job_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="vehicle_id" readonly="state != 'draft'"/>
                            <field name="last_vehicle_insurance_id"/>
                            <field name="new_insurance_start_date" readonly="state != 'draft'"/>
                            <field name="new_insurance_end_date" readonly="state != 'draft'"/>
                            <field name="amount" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Note">
                            <field name="note" widget="html"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_renew_vehicle_insurance_tree" model="ir.ui.view">
        <field name="name">flex.approval.renew_vehicle_insurance.tree</field>
        <field name="model">flex.approval.renew_vehicle_insurance</field>
        <field name="arch" type="xml">
            <tree string="Renew Vehicle Insurance">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="vehicle_id"/>
                <field name="last_vehicle_insurance_id"/>
                <field name="insurance_expiry_date"/>
                <field name="new_insurance_start_date"/>
                <field name="new_insurance_end_date"/>
                <field name="amount"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_renew_vehicle_insurance_search" model="ir.ui.view">
        <field name="name">flex.approval.renew_vehicle_insurance.search</field>
        <field name="model">flex.approval.renew_vehicle_insurance</field>
        <field name="arch" type="xml">
            <search string="Renew Vehicle Insurance">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="vehicle_id"/>
                <field name="last_vehicle_insurance_id"/>
                <field name="insurance_expiry_date"/>
                <field name="new_insurance_start_date"/>
                <field name="new_insurance_end_date"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_renew_vehicle_insurance" model="ir.actions.act_window">
        <field name="name">Renew Vehicle Insurance</field>
        <field name="res_model">flex.approval.renew_vehicle_insurance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Renew Vehicle Insurance
            </p>
        </field>
    </record>

</odoo>
