<odoo>
    <data>
        <!-- Form View for Driving License Renewal Approval -->
        <record id="view_approval_renew_driving_license_form" model="ir.ui.view">
            <field name="name">flex.approval.renew_driving_license.form</field>
            <field name="model">flex.approval.renew_driving_license</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Submit for Approval" type="object" name="action_submit_for_approval"
                                invisible="state != 'draft'"/>
                        <button string="Approve" type="object" name="action_approve"
                                invisible="state not in ('hr_manager_approval')"/>
                        <button string="Reject" type="object" name="action_reject"
                                invisible="state not in ('hr_manager_approval')"/>
                        <field name="state" widget="statusbar" readonly="True"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_view_expenses" class="oe_stat_button" type="object" icon="fa-money"
                                    invisible="state not in ('approved')">
                                <field name="expense_ids" widget="statinfo" string="Expenses"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" placeholder="Sequence"/>
                            <h1>
                                <field name="name" placeholder="Sequence"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="create_date" invisible="True" readonly="True"/>
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="employee_number" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                                <field name="employee_job_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="vehicle_id" readonly="state != 'draft'" required="True"/>
                                <field name="last_vehicle_license_id" readonly="1"/>
                                <field name="last_driving_license_date_from" readonly="1"/>
                                <field name="last_driving_license_date_to" readonly="1"/>
<!--                                <field name="driving_license_number" readonly="state != 'draft'"/>-->
                                <field name="driving_license_date_from" readonly="state != 'draft'" required="True"/>
                                <field name="driving_license_date_to" readonly="state != 'draft'" required="True"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Note">
                                <field name="note" widget="html" readonly="state != 'draft'"/>
                            </page>
                            <page name="Attachments">
                                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"
                                       class="g-col-8" readonly="state != 'draft'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Driving License Renewal Approval -->
        <record id="view_approval_renew_driving_license_tree" model="ir.ui.view">
            <field name="name">flex.approval.renew_driving_license.tree</field>
            <field name="model">flex.approval.renew_driving_license</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id" column_invisible="1"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="employee_id"/>
                    <field name="employee_number" optional="hide"/>
                    <field name="department_id" optional="hide"/>
                    <field name="employee_job_id" optional="hide"/>
                    <field name="vehicle_id"/>
                    <field name="last_vehicle_license_id" optional="hide"/>
                    <field name="last_driving_license_date_from" optional="hide"/>
                    <field name="last_driving_license_date_to" optional="hide"/>
<!--                    <field name="driving_license_number" optional="show"/>-->
                    <field name="driving_license_date_from" optional="show"/>
                    <field name="driving_license_date_to" optional="show"/>
                    <field name="state" widget="badge" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Driving License Renewal Approval Action -->
        <record id="action_approval_renew_driving_license" model="ir.actions.act_window">
            <field name="name">Driving License Renewal Requests</field>
            <field name="res_model">flex.approval.renew_driving_license</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your First Driving License Request
                </p>
            </field>
        </record>

    </data>
</odoo>
