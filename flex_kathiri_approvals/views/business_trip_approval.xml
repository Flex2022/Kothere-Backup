<odoo>
    <data>
        <!-- Business Trip Approval Form View -->
        <record id="view_approval_business_trip_form" model="ir.ui.view">
            <field name="name">flex.approval.business_trip.form</field>
            <field name="model">flex.approval.business_trip</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Submit for Approval" type="object" name="action_submit_for_approval"
                                invisible="state != 'draft'"/>
                        <button string="Approve Business Trip" type="object" name="action_approve_business_trip"
                                invisible="state in ('draft', 'rejected','approved')"/>
                        <button string="Reject" type="object" name="action_reject_business_trip"
                                invisible="state in ('draft', 'rejected', 'approved')"/>
                        <field name="state" widget="statusbar" readonly="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" placeholder="Sequence"/>
                            <h1>
                                <field name="name" placeholder="Sequence"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="department_id" readonly="1"/>
                                <field name="destination" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="start_date" readonly="state != 'draft'"/>
                                <field name="end_date" readonly="state != 'draft'"/>
                                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"
                                       class="g-col-8" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Note">
                                <field name="note" widget="html" readonly="state != 'draft'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Business Trip Approval Tree View -->
        <record id="view_approval_business_trip_tree" model="ir.ui.view">
            <field name="name">flex.approval.business_trip.tree</field>
            <field name="model">flex.approval.business_trip</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="destination"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Business Trip Approval Action -->
        <record id="action_approval_business_trip" model="ir.actions.act_window">
            <field name="name">Business Trip Approvals</field>
            <field name="res_model">flex.approval.business_trip</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
