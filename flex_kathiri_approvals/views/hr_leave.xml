<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_leave_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_status_id']" position="before">
                <field name="employee_nationality"/>
            </xpath>
            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="needs_visa" widget="boolean_toggle" readonly="state not in ('draft','confirm')"/>
                <field name="visa_for" invisible="needs_visa == False" required="needs_visa == True"
                       readonly="state not in ('draft','confirm')"/>
            </xpath>
        </field>
    </record>
</odoo>


