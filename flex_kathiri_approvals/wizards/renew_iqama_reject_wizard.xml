<odoo>
    <data>
        <!-- Define the view for the rejection wizard -->
        <record id="view_flex_approval_renew_iqama_id_reject_wizard_form" model="ir.ui.view">
            <field name="name">flex.approval.renew_iqama.reject.wizard.form</field>
            <field name="model">flex.approval.renew_iqama.reject.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="reason" widget="text" placeholder="Enter the rejection reason..." required="1"/>
                    <footer>
                        <button string="Confirm Rejection" type="object" name="action_confirm_rejection"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Define the action for the rejection wizard -->
        <record id="action_flex_approval_renew_iqama_id_reject_wizard" model="ir.actions.act_window">
            <field name="name">Rejection Reason</field>
            <field name="res_model">flex.approval.renew_iqama.reject.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_flex_approval_renew_iqama_id_reject_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
