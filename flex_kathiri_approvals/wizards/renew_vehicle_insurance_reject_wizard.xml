<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_flex_approval_renew_vehicle_insurance_reject_wizard" model="ir.ui.view">
        <field name="name">flex.approval.renew_vehicle_insurance.reject.wizard.form</field>
        <field name="model">flex.approval.renew_vehicle_insurance.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Vehicle Insurance Renewal Rejection">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Reject" type="object" name="action_confirm_rejection" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_flex_approval_renew_vehicle_insurance_reject_wizard" model="ir.actions.act_window">
        <field name="name">Vehicle Insurance Renewal Rejection</field>
        <field name="res_model">flex.approval.renew_vehicle_insurance.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
