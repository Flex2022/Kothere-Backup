<!-- product_data.xml -->
<odoo>
    <data noupdate="1">
        <!-- Define the product template for Air Ticket -->
        <record id="product_product_air_ticket" model="product.product">
            <field name="name">Air Ticket</field>
            <field name="type">service</field> <!-- service, consu (consumable), or product (storable) -->
            <field name="sale_ok" eval="False"/>
            <field name="purchase_ok" eval="True"/>
            <field name="list_price">1.0</field> <!-- Set the sale price -->
            <field name="standard_price">1.0</field> <!-- Set the cost price -->
            <field name="uom_id" ref="uom.product_uom_unit"/> <!-- Unit of Measure -->
            <field name="uom_po_id" ref="uom.product_uom_unit"/> <!-- Purchase Unit of Measure -->
            <field name="categ_id" ref="product.product_category_all"/> <!-- Product Category -->
        </record>
    </data>
</odoo>