<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="flex_weight_po_flex_device_user_list_view" model="ir.ui.view">
            <field name="name">flex_weight_po.flex.device.user.tree</field>
            <field name="model">flex.device.user</field>
            <field name="arch" type="xml">
                <tree string="Device Configurations" editable="bottom">
                    <field name="user_id"/>
                    <field name="device_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>


        <record id="flex_weight_po_flex_weight_po_flex_device_user_act_window" model="ir.actions.act_window">
            <field name="name">Device Configurations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">flex.device.user</field>
            <field name="view_mode">list</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no device configuration yet, you must to add one to be able to use the device.
                </p>
            </field>
        </record>

        <menuitem name="Device Configurations"
                  id="flex_weight_po_flex_weight_po_flex_device_user_menu"
                  parent="menu_weight_configuration"
                  action="flex_weight_po_flex_weight_po_flex_device_user_act_window"
                  groups="flex_weight_po.flex_can_config_device"/>

    </data>
</odoo>