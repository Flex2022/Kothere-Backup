<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.flex.weight.po</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_weight_po" string="Weight Po" type="object"
                        class="oe_stat_button" icon="fa-list" invisible="weight_po_count == 0">
                    <field name="weight_po_count" invisible="1"/>
                </button>
            </xpath>
                <h1>
                    <field name="its_weight" invisible="1"/>
                </h1>

            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="its_weight" invisible="1"/>
<!--                <field name="truck_no" readonly="1" invisible="its_weight != True"/>-->
<!--                <field name="temperature" readonly="1" invisible="its_weight != True"/>-->
<!--                <field name="driver_id" readonly="1" invisible="its_weight != True"/>-->
<!--                <field name="remarks_open" invisible="1"/>-->
<!--                <field name="remarks" readonly="1" invisible="remarks_open != True"/>-->
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="weight" column_invisible="parent.its_weight != True" readonly="1"/>
                <field name="weight1" column_invisible="parent.its_weight != True" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>