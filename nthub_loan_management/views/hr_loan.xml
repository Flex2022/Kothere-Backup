<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Loan Tree view-->
    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="loan_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                    <button name="compute_installment" type="object" string="Compute Installment" class="oe_highlight"
                            invisible="state !='waiting_approval_1'"/>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve"
                            invisible="state != 'waiting_approval_1'"
                            class="oe_highlight" groups="nthub_loan_management.loan_approval_group"/>
                    <button name="action_refuse" type="object" string="Refuse"
                            invisible="state != 'waiting_approval_1'"
                            class="oe_highlight" groups="nthub_loan_management.loan_approval_group"/>
                    <button name="action_register_payment" type="object" string="Register Payment"
                            groups="nthub_loan_management.loan_approval_group"
                            invisible="state != 'approve' or payment"/>
                    <button name="loan_Settlement" type="object" string="Settlement"
                            class="oe_highlight" groups="nthub_loan_management.loan_approval_group"
                            invisible="state != 'paid' or balance_amount == 0"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve,paid"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group col="4">
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="job_position"/>
                            <field name="loan_amount" readonly="state == 'approve'"/>
                            <field name="installment" readonly="state == 'approve'"/>
                            <field name="payment_date" readonly="state == 'approve'"/>
                            <field name="payment_id" readonly="1"/>
                            <field name="payment" readonly="1" invisible="1"/>
                            <field name="reason" readonly="state == 'approve'"/>

                        </group>
                        <group col="4">
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                            <field name="currency_id" options="{'no_create': True}" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Installments">
                            <field name="loan_lines">
                                <tree string="Installments" editable="bottom" delete="false">
                                    <field name="date" readonly="paid"/>
                                    <field name="amount" readonly="paid"/>
                                    <field name="paid" readonly="1" invisible="0"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--loan search view-->
    <record id="view_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.loan.search.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <filter string="My Requests" name="myrequest" domain="[('user_id.id', '=', uid)]"/>
                <field name="employee_id" string="Employee"/>
                <field name="department_id" string="Department"/>
                <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
                <filter string="Status" name="status" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>


    <!--loan menu-->
    <menuitem name="Loans"
              id="menu_hr_loans_and_advances" web_icon="nthub_loan_management,static/description/icon.png"
              sequence="20"/>

    <record id="action_hr_loan_request" model="ir.actions.act_window">
        <field name="name">Request for Loan</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <field name="search_view_id" ref="view_loan_request_search_form"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p>
            <p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <menuitem name="Loan"
              id="menu_base_hr_loan_request"
              parent="menu_hr_loans_and_advances"
              sequence="1"/>

    <menuitem name="Request for Loan"
              parent="menu_base_hr_loan_request"
              id="menu_hr_loan_request"
              action="action_hr_loan_request"/>

    <!-- Shortcuts -->
    <record id="act_hr_employee_loan_request" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myloan': 1}</field>
        <field name="view_id" eval="hr_loan_tree_view"/>
    </record>
    <record id="act_hr_employee_loan_request_details" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','approve'),('employee_id.id', '=', active_id)]</field>
    </record>


    <!-- HR employee inherit Loans -->
    <record id="view_employee_form_loan_inherit" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_loan_request_details)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        groups="hr.group_hr_manager,hr.group_hr_user">
                    <field name="loan_count" widget="statinfo" string="Loans"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="before">
                <group>
                    <field name="related_partner"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
