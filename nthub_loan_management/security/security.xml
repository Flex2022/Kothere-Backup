<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="record_rule_company_own_loan" model="ir.rule">
            <field name="name">Company See Own Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="record_rule_user_own_loan" model="ir.rule">
            <field name="name">User See Own Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('user_id', '=', user.id),]</field>
            <field name="groups" eval="[(4, ref('nthub_loan_management.group_loan_user'))]"/>
        </record>


    </data>
</odoo>