<odoo>

    <!--     Tree View for repair.order.line -->
    <record id="view_repair_order_line_tree" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree sample="1" default_order="date, picking_id, sequence" string="Moves" create="0">
                <field name="repair_line_type"/>
                <field name="repair_vehicle_id"/>
                <field name="repair_license_plate"/>
                <field name="repair_driver_id"/>
                <field name="repair_maintenance_request_id"/>
                <field name="repair_product_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="quantity"/>
                <field name="product_uom"/>
                <field name="picked"/>
                <field name="product_valuation" readonly="1"/>
                <field name="product_valuation_currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_repair_order_line" model="ir.actions.act_window">
        <field name="name">Repair Order Lines</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_repair_order_line_tree"/>
        <field name="domain">[('repair_line_type','=','add'), ('repair_id','!=',False)]</field>
        <field name="context">{'create' : 0, 'edit':0}</field>
    </record>

    <menuitem
            id="repair_order_line_action"
            name="Repair Order Lines"
            action="action_repair_order_line"
            parent="repair.repair_menu_reporting"
            sequence="10"/>
</odoo>
