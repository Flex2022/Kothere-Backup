<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- views/flex_account_move_report_view.xml -->
    <record id="view_flex_account_move_report_form" model="ir.ui.view">
        <field name="name">flex.account.move.report.form</field>
        <field name="model">flex.account.move.report</field>
        <field name="arch" type="xml">
            <form string="Account Move Report Wizard">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="partner_id"/>
                    <field name="type"/>
                </group>
                <notebook>
                    <page string="Result">
                        <field name="line_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="parent_id" column_invisible="1"/>
                                <field name="move_line_id" column_invisible="1"/>
                                <field name="company_id" column_invisible="1"/>
                                <field name="currency_id" column_invisible="1"/>
                                <field name="move_type"/>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="invoice_name"/>
                                <field name="line_description"/>
                                <field name="line_product_id"/>
                                <field name="line_quantity"/>
                                <field name="price_unit"/>
                                <field name="tax_ids" widget="many2many_tags"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button name="generate_report_pdf" string="Generate PDF Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- actions/flex_account_move_report_action.xml -->
    <record id="action_flex_account_move_report" model="ir.actions.act_window">
        <field name="name">Generate Account Move Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">flex.account.move.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_flex_account_move_report" model="ir.ui.menu">
        <field name="name">Generate Account Move Report</field>
        <field name="parent_id" ref="account.account_reports_legal_statements_menu"/>
        <field name="action" ref="action_flex_account_move_report"/>
    </record>

</odoo>
