<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="flex_approvals_approval_category_view_form_inherit" model="ir.ui.view">
            <field name="name">approval.category.form</field>
            <field name="model">approval.category</field>
            <field name="inherit_id" ref="approvals.approval_category_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='has_location']" position="after">
                    <field name="has_appointment_type" widget="radio" options="{'horizontal': true}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>