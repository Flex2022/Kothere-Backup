<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="hr_contract_view_form_inherit_flex" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit.flex</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_start']" position="after">
                    <field name="contract_type_duration"/>
                    <!--                    <field name="contract_end_date"/>-->
                </xpath>


                <xpath expr="//group[@name='salary']" position="inside">
                    <label for="call_allowance"/>
                    <div class="o_row mw-50" name="other_allowance_1">
                        <field name="call_allowance" class="oe_inline o_hr_narrow_field" nolabel="1" widget="monetary"/>
                        <div class="mb-3">/ month</div>
                    </div>

                    <label for="food_allowance"/>
                    <div class="o_row mw-50" name="other_allowance_2">
                        <field name="food_allowance" class="oe_inline o_hr_narrow_field" nolabel="1" widget="monetary"/>
                        <div class="mb-3">/ month</div>
                    </div>


                </xpath>
            </field>
        </record>
    </data>
</odoo>