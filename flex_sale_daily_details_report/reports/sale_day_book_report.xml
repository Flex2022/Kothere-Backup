<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template t-name="report_sale_day_book">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="w-100 text-center">
                            <h2>Sales Day Book</h2>
                            <h4>
                                <span t-field="o.date_from"/>
                                -
                                <span t-field="o.date_to"/>
                            </h4>
                        </div>
                        <div class="mt-5" t-if="o.line_ids">
                            <h5>
                                Products
                            </h5>
                            <table class="table table-sm">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="text-start">Product</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Price Unit</th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="mt-5" t-if="o.payment_ids">
                            <h5>
                                Payments
                            </h5>
                            <table class="table table-sm">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="text-start">Name</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.payment_ids" t-as="payment">
                                    <tr>
                                        <td>
                                            <span t-field="payment.name"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="payment.amount"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="mt-5" t-if="o.taxes_ids">
                            <h5>
                                Taxes
                            </h5>
                            <table class="table table-sm">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="text-start">Name</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.taxes_ids" t-as="tax">
                                    <tr>
                                        <td>
                                            <span t-field="tax.name"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="tax.amount"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="paperformat_basic_layout" model="report.paperformat">
        <field name="name">Basic Layout</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

    <record id="sale_book_day_report" model="ir.actions.report">
        <field name="name">SALES DAY BOOK REPORT</field>
        <field name="model">sale.book_day.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">flex_sale_daily_details_report.report_sale_day_book</field>
        <field name="report_file">flex_sale_daily_details_report.report_sale_day_book</field>
        <field name="binding_model_id" ref="model_sale_book_day_wizard"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="flex_sale_daily_details_report.paperformat_basic_layout"/>
    </record>

</odoo>