<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_book_day_wizard_form" model="ir.ui.view">
        <field name="name">sale.book.day.wizard.form</field>
        <field name="model">sale.book_day.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Generate Report" type="object" class="oe_highlight"
                                name="action_print_pdf"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_sale_book_day_wizard" model="ir.actions.act_window">
        <field name="name">Sales Book Day Report</field>
        <field name="res_model">sale.book_day.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="flex_sale_daily_details_report.view_sale_book_day_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_book_day_report" name="Sales Book Day Report"
              action="action_sale_book_day_wizard"
              parent="sale.menu_sale_report"
              sequence="20"
              groups="sales_team.group_sale_salesman"/>

</odoo>