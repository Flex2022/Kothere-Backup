<odoo>
   <!-- Inherit Form View to Modify it -->
   <record id="res_config_settings_view_form_flex_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.flex.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='sale_pdf_quote_builder']" position="after">
                <setting id="is_alayan" help="Change Sale Order Approvment Cycle">
                            <field name="is_alayan_company"/>
                </setting>
            </xpath>
        </field>
   </record>
    <record id="view_company_form_inherit_flex" model="ir.ui.view">
        <field name="name">view.company.form.inherit.flex</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
               <field name="is_alayan" invisible="1"/>
            </xpath>
        </field>
   </record>
</odoo>