        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view_order_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_company" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="replace"></xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="invisible">state not in ('draft','sent') or is_company == True</attribute>
<!--                    <attribute name="groups">flex_sale_confirm.group_sale_confirm</attribute>-->
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="before">
                    <button name="action_submit" type="object" string="Submit Approval"
                            groups="flex_sale_confirm.group_sale_submit" class="oe_highlight" invisible="state not in ('draft','sent') or is_company == False"/>
                    <button name="action_finance" type="object" string="Sales manager"
                            groups="flex_sale_confirm.group_sale_finance" class="oe_highlight"
                            invisible="state not in 'submit'"/>
                    <button name="action_gm" type="object" string="GM Manager"
                            groups="flex_sale_confirm.group_sale_gm" class="oe_highlight"
                            invisible="state not in 'finance'"/>
                    <button name="action_confirm2" type="object" string="Confirm Order"
                            groups="flex_sale_confirm.group_sale_confirm" class="oe_highlight"
                            invisible="state not in 'gm'"/>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="invisible" groups="flex_sale_confirm.group_cancel_sale_order">state not in ('draft', 'sent','submit' ,'finance', 'gm', 'sale') or id == False</attribute>

                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" type="object" string="Cancel"
                            groups="flex_sale_confirm.group_cancel_sale_order"/>
                </xpath>
<!--                <xpath expr="//header/field[@name='state']" position="attributes">-->
<!--                    <attribute name="statusbar_visible">draft,sent,submit,finance,gm,sale</attribute>-->
<!--                </xpath>-->
