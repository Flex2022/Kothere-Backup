<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
                <record id="view_salary_increase_tree" model="ir.ui.view">
                    <field name="name">salary.increase.tree</field>
                    <field name="model">salary.increase</field>
                    <field name="arch" type="xml">
                        <tree string="Salay Increase Tree">
                            <field name="name"/>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="type"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </record>

                <record id="view_salary_increase_form" model="ir.ui.view">
                    <field name="name">salary.increase.from</field>
                    <field name="model">salary.increase</field>
                    <field name="arch" type="xml">
                        <form string="Salary Increase Form">
                            <header>
                                <button string="Submit" name="action_submitted" type="object" invisible="state != 'draft'" class="oe_highlight" groups="hr.group_hr_user"/>
                                <button string="Confirm" name="action_accounting_approve" type="object" invisible="state != 'submit'" class="oe_highlight" groups="account.group_account_manager"/>
                                <button string="CEO Approve" name="action_ceo_approve" type="object" invisible="state != 'acc_approve'" class="oe_highlight" groups="hr_employee_updation.group_ceo_approval"/>
                                <button string="HR Approve" name="action_hr_approve" type="object" invisible="state != 'ceo_approve'" class="oe_highlight" groups="hr.group_hr_manager" />
                                <field name="state" widget="statusbar"/>
                            </header>
                            <sheet>
                                <group>
                                    <field name="name" required="1"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="company_id" invisible="1"/>
                                        <field name="type" required="1"/>
                                        <field name="user_id"/>
                                    </group>
                                    <group>
                                        <field name="date" required="1"/>
                                        <field name="increase_percent" required="1"/>
                                    </group>
                                </group>
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="employee_id" required="1"/>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="current_salary" required="1"/>
<!--                                        <field name="current_variable_increase" required="1"/>-->
                                        <field name="type" required="1"/>
                                        <field name="currency_id" />
                                        <field name="salary_increase_amount" required="1" sum="Total Salary Increase"/>
<!--                                        <field name="variable_increase_amount" required="1" sum="Total Variable Increase"/>-->
                                        <field name="new_salary" required="1"/>
<!--                                        <field name="new_variable_increase" required="1"/>-->
                                    </tree>
                                </field>
                           </sheet>
                            <div class="oe_chatter">
                                <field name="message_follower_ids" widget="mail_followers"/>
                                <field name="activity_ids" widget="mail_activity"/>
                                <field name="message_ids" widget="mail_thread"/>
                            </div>
                        </form>
                    </field>
                </record>

                <record id="hr_salary_increase_action" model="ir.actions.act_window">
                    <field name="name">Salary Increase</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">salary.increase</field>
                    <field name="view_mode">tree,form</field>
                    <field name="help" type="html">
                        <p class="o_view_nocontent_smiling_face">
                            Create a new salary increase
                        </p>
                    </field>
                </record>

                <menuitem name="Salary Increase"
                          parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
                          id="menu_salary_increase_action"
                          action="hr_salary_increase_action"
                          sequence="60"
                          groups="hr_payroll.group_hr_payroll_user"/>

        <record id="hr_contract_salary_increase" model="ir.ui.view">
            <field name="name">hr.contract.salary.increase</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page string="Salary Increase" name="salary_increase">
                        <field name="increase_salary_line_ids" readonly="1">
                            <tree>
                                <field name="date"/>
                                <field name="employee_id" invisible="1"/>
                                <field name="contract_id" invisible="1"/>
                                <field name="current_salary" sum="Total Current Salary"/>
<!--                                <field name="current_variable_increase" sum="Total Current Variable Increase"/>-->
                                <field name="type"/>
                                <field name="salary_increase_amount" sum="Total Variable Increase"/>
<!--                                <field name="variable_increase_amount" sum="Total Increase"/>-->
                                <field name="new_salary" sum="Total New Salary"/>
<!--                                <field name="new_variable_increase" sum="Total Variable Increase"/>-->
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>