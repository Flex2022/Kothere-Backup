        <record id="view_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="attributes">
                    <attribute name="options">{'no_create_edit': True, 'no_create': True, 'no_open': True}</attribute>
                </xpath>
                 <xpath expr="//field[@name='manager_id']" position="after">
                    <field name="non_t2" groups="hr.group_hr_manager"/>
                </xpath>
                <xpath expr="//group[1]" position="after">
                    <group>
                        <group name="accounting" string="Accounting Details" groups="account.group_account_manager">
                            <field name="analytic_distribution"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
