<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_office_location_tree" model="ir.ui.view">
            <field name="name">hr.employee.office.location.tree</field>
            <field name="model">hr.employee.office.location</field>
            <field name="arch" type="xml">
                <tree string="Office Tree">
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="resource_calendar_id"/>
                    <field name="tz"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_office_location_form" model="ir.ui.view">
            <field name="name">hr.employee.office.location.from</field>
            <field name="model">hr.employee.office.location</field>
            <field name="arch" type="xml">
                <form string="Office Form">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="contract_notification_before" required="1"/>
                                <field name="request_leave_before" required="1"/>
                                <field name="allocation_per_year" required="1"/>
                            </group>
                            <group>
                                <field name="country_id" required="1"/>
                                <field name="state_id" required="1"/>
                                <field name="resource_calendar_id" required="1"/>
                                <field name="tz" required="1"/>
                            </group>
                            <group>
                                <field name="calculate_weekend"/>
                                <field name="allow_minus_leave"/>
                                <field name="number_of_minus_leave" invisible="allow_minus_leave != True" required="allow_minus_leave == True" />
                            </group>
                            <group>
                                <field name="allow_send_allocation_email"/>
                                <field name="financial_resignation"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_office_location_action" model="ir.actions.act_window">
            <field name="name">Offices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.office.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new office
                </p>
            </field>
        </record>

        <menuitem name="Offices"
                  parent="hr.menu_config_employee"
                  id="menu_hr_employee_office_location_action"
                  action="hr_employee_office_location_action"
                  sequence="60"/>
    </data>
</odoo>