    <record id="contract_email_notification_template" model="mail.template">
        <field name="name">Contract e-mail template</field>
        <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
        <field name="subject">Notification to check contract - ${object.employee_id.name}</field>
        <field name="email_to">${object.hr_user_id.email|safe}</field>
        <field name="model_id" ref="hr_employee_updation.model_hr_contract"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
                <![CDATA[
                      <p>Dear ${(object.hr_user_id.name)},<br/><br/>
                      We would like to inform you that <strong>"${(object.employee_id.name)}"</strong> contract <br/>
                      will expire soonest <br/><br/>
                      Please make the necessary <br/><br/>
                      Regards,<br/><br/>]]>
        </field>
    </record>

    <record id="trial_contract_email_notification_template" model="mail.template">
        <field name="name">Trial Contract e-mail template</field>
        <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
        <field name="subject">Trial Period contract - ${object.employee_id.name}</field>
        <field name="email_to">${object.hr_user_id.email|safe}</field>
        <field name="model_id" ref="hr_employee_updation.model_hr_contract"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
                <![CDATA[
                      <p>Dear ${(object.hr_user_id.name)},<br/><br/>
                      We would like to inform you that <strong>"${(object.employee_id.name)}"</strong> trial contract <br/>
                      will expire soonest <br/><br/>
                      Please make the necessary <br/><br/>
                      Regards,<br/><br/>]]>
        </field>
    </record>

    <template id="internal_layout_without_header">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
        </div>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
    </template>

</odoo>
