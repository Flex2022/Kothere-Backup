            <field name="model">hr.contract</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_employee_updation.end_of_service_liquidation_form</field>
            <field name="report_file">hr_employee_updation.end_of_service_liquidation_form</field>
            <field name="binding_model_id" ref="model_hr_contract"/>
