<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='reception_report']" position="after">
                <setting id="apply_distance" string="Apply Distance" help="Apply Distance for Delivery Orders">

                <div class="text-muted">
                <field name="apply_distance"/>
                </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>