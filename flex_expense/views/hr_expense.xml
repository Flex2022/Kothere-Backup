<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit hr.expense form view -->
        <record id="hr_expense_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.expense.view.form.inherit</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="attributes">
                    <attribute name="domain">[('account_type', 'in', ('asset_receivable','liability_payable')), ('company_id', '=', company_id)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

