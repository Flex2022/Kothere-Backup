<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="detailed_partner_ledger_form" model="ir.ui.view">
        <field name="name">detailed_partner_ledger_form</field>
        <field name="model">detailed.partner.ledger</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="partner_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_detailed_partner_ledger" model="ir.actions.act_window">
        <field name="name">Detailed Partner Ledger</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">detailed.partner.ledger</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_detailed_partner_ledger" name="Detailed Partner Ledger" action="action_detailed_partner_ledger"
              parent="account_reports.account_reports_partners_reports_menu"/>

</odoo>
