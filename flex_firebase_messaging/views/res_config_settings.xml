<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <block name="integration" position="inside">
                    <setting id="Firebase">
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="firebase_project_key" class="col-3 o_light_label"/>
                                <field name="firebase_project_key"/>
                            </div>
                            <div class="mt16 row">
                                <label for="firebase_key_file" class="col-3 o_light_label"/>
                                <field name="firebase_key_file" widget="binary" options="{'accepted_file_extensions': '.json'}"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </field>
        </record>

    </data>
</odoo>
