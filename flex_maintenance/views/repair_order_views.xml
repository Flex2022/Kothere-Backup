<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_repair_order_form_inherit" model="ir.ui.view">
            <field name="name">view.repair.order.form.inherit</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="vehicle_id"/>
                    <field name="license_plate"/>
                    <field name="driver_id"/>
                    <field name="maintenance_request_id" readonly="1"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object" name="get_purchase_order" class="oe_stat_button" icon="fa-building">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value" widget="statinfo">
                                <field name="purchase_count" widget="statinfo" nolabel="1" class="mr4" readonly="1"/>
                            </span>
                            <span class="o_stat_text">Purchase Order</span>
                        </div>
                    </button>
                </xpath>

            </field>
        </record>


    </data>
</odoo>