<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="biotime_period_form" model="ir.ui.view">
            <field name="name">biotime.period.form</field>
            <field name="model">biotime.period</field>
            <field name="arch" type="xml">
                <form>
                    <field name="biotime_server_id" invisible="1"/>
                    <field name="method_name" invisible="1"/>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                            </group>
                            <group>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
