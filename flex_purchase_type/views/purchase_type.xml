<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_type_tree" model="ir.ui.view">
            <field name="name">purchase_type_tree</field>
            <field name="model">purchase.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="purchase_type_form" model="ir.ui.view">
            <field name="name">purchase_type_form</field>
            <field name="model">purchase.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_purchase_type" model="ir.actions.act_window">
            <field name="name">Purchase Types</field>
            <field name="res_model">purchase.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>

         <menuitem id="menu_purchase_type" name="Purchase Types" parent="purchase.menu_purchase_config" sequence="6"
                   action="action_purchase_type" groups="purchase.group_purchase_manager"/>
    </data>
</odoo>