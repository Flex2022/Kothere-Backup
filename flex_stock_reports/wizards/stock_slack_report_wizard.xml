<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_slack_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.slack.report.wizard.form</field>
        <field name="model">flex.stock.slack.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"
                               options="{'no_create' :True , 'no_create_edit': True}"/>
                        <field name="location_ids" widget="many2many_tags"
                               options="{'no_create' :True , 'no_create_edit': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="qty_min"/>
                        <field name="qty_max"/>
                    </group>
                </group>
                <footer>
                    <button string="Get Lines" type="object" class="oe_highlight" name="generate_report"/>
                    <button string="PDF" type="object" class="oe_highlight" name="generate_report_pdf"/>
                    <button string="Excel" type="object" class="oe_highlight" name="generate_report_excel"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_flex_stock_slack_report_wizard" model="ir.actions.act_window">
        <field name="name">Stock Slack Report</field>
        <field name="res_model">flex.stock.slack.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="flex_stock_reports.view_stock_slack_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_action_stock_slack_report_wizard"
              name="Stock Slack Report"
              parent="stock.menu_warehouse_report"
              sequence="360" action="action_flex_stock_slack_report_wizard"/>

</odoo>