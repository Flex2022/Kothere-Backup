<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="flex_material_purchase_requisitions_category">
            <field name="name">Requisitions Types Access</field>
            <field name="sequence">1</field>
        </record>


        <record id="flex_material_purchase_requisitions_buy" model="res.groups">
            <field name="name">Requisitions || Buy</field>
            <field name="category_id"
                   ref="flex_material_purchase_requisitions_category"/>
        </record>

        <record id="flex_material_purchase_requisitions_internal" model="res.groups">
            <field name="name">Requisitions || Internal</field>
            <field name="category_id"
                   ref="flex_material_purchase_requisitions_category"/>
        </record>

        <record id="flex_material_purchase_requisitions_sample" model="res.groups">
            <field name="name">Requisitions || Sample</field>
            <field name="category_id"
                   ref="flex_material_purchase_requisitions_category"/>
        </record>


        <record id="flex_material_purchase_requisitions_buy_rule_show" model="ir.rule">
            <field name="name">flex material purchase requisitions buy rule</field>
            <field ref="material_purchase_requisitions.model_material_purchase_requisition" name="model_id"/>
            <field name="domain_force">
                [('requisition_type', '=', 'buy')]
            </field>
            <field name="groups"
                   eval="[(4, ref('flex_material_purchase_requisitions.flex_material_purchase_requisitions_buy'))]"/>
        </record>

        <record id="flex_material_purchase_requisitions_internal_rule" model="ir.rule">
            <field name="name">flex material purchase requisitions internal rule</field>
            <field ref="material_purchase_requisitions.model_material_purchase_requisition" name="model_id"/>
            <field name="domain_force">
                [('requisition_type', '=', 'internal_picking')]
            </field>
            <field name="groups"
                   eval="[(4, ref('flex_material_purchase_requisitions.flex_material_purchase_requisitions_internal'))]"/>
        </record>

        <record id="flex_material_purchase_requisitions_sample_rule" model="ir.rule">
            <field name="name">flex material purchase requisitions sample rule</field>
            <field ref="material_purchase_requisitions.model_material_purchase_requisition" name="model_id"/>
            <field name="domain_force">
                [('requisition_type', '=', 'sample')]
            </field>
            <field name="groups"
                   eval="[(4, ref('flex_material_purchase_requisitions.flex_material_purchase_requisitions_sample'))]"/>
        </record>
    </data>
</odoo>