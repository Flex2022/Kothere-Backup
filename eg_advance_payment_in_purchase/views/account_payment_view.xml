<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_advance_payment_account" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.advance_payment_account</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="advance_payment" invisible="payment_type != 'outbound'" readonly="state != 'draft'"/>
                <field name="advance_payment_account_id" invisible="advance_payment == False or payment_type != 'outbound'" readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>
