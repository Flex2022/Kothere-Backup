<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_advance_payment_account" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.advance_payment_account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pay_invoice_online_setting_container']/setting[@id='qr_code_invoices']"
                   position="after">
                <setting id="purchase_advance_payment" title="Add Advance Payment Account For Purchase Advance Payment."
                         string="Advance Payment Account" help="Add Advance payment Account">
                    <field name="advance_payment_account_id" class="oe_inline"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
