<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_request_form" model="ir.ui.view">
        <field name="name">account.payment.request.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="vi_id" invisible="vi_id == False"/>
                 <field name="payment_type" widget="radio" invisible="1"/>
                 <field name="partner_type"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_payment_requests_tree" model="ir.ui.view">
            <field name="name">account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_company_currency_signed']" position="after">
                    <field name="vi_id" invisible="vi_id == False"/>
                    <field name="payment_type" invisible="1"/>
                    <field name="partner_type"/>
                </xpath>
            </field>
    </record>

</odoo>