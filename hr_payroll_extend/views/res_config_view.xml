<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_variable_increase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.variable.increase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='hr_payroll_accountant']" position="after">
                <block title="Variable Increase">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Variable Increase Journal</span>
                                <div class="text-muted">
                                    Please set variable increase journal
                                </div>
                                <div class="text-muted">
                                    <field name="increase_journal_id"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Variable Increase Credit Account</span>
                                <div class="text-muted">
                                    Please set variable increase credit account
                                </div>
                                <div class="text-muted">
                                    <field name="increase_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
