<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="flex_landing_orders_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_landing_order_using_wizerd" type="object" string="Create landing order"
                            groups="flex_landing_order.flex_landing_order_group_landing_order_manager"
                            class="oe_stat_button"/>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="get_all_landings" type="object" string="Landing Orders"
                            groups="flex_landing_order.flex_landing_order_group_landing_order_manager"
                            class="oe_stat_button"
                            icon="fa-book">
                        <field name="landing_orders_count" widget="statinfo"
                                 groups="flex_landing_order.flex_landing_order_group_landing_order_manager"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="order_type" groups="flex_landing_order.flex_landing_order_group_landing_order_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>