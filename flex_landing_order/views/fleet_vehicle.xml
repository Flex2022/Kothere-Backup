<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ModelName_form_inherit" model="ir.ui.view">
            <field name="name">flex_landing_order.fleet.vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="get_all_landings" type="object" class="oe_stat_button" icon="fa-book">
                        <field name="loading_order_count" widget="statinfo" string="Loading Order"/>
                    </button>
                </xpath>
                <xpath expr="//group[1]/group[1]/field[@name='driver_id']" position="after">
                    <field name="employee_id_dr"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>