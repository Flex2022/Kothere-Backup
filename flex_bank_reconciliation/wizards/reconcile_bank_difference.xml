<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="flex_reconcile_bank_expenses_difference_view_form" model="ir.ui.view">
        <field name="name">flex.reconcile.bank.difference.form</field>
        <field name="model">flex.reconcile.bank.difference</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="type"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="reconcile_label"/>
                    </group>
                    <group>
                        <field name="reconcile_journal_id"/>
                        <field name="reconcile_exp_account_id"/>
                        <field name="reconcile_rev_account_id"/>
                        <field name="partner_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Create" type="object" class="btn-primary"
                            name="create_difference_journal_entry"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>