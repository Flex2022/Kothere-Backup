<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="flex_landing_order_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">flex_landing_purchase_order.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_landing_order_using_wizerd" type="object" string="Create landing order"
                            groups="flex_landing_purchase_order.flex_landing_order_group_landing_order_manager"
                            class="oe_stat_button"/>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="get_all_landings" type="object" string="Landing Orders"
                            groups="flex_landing_purchase_order.flex_landing_order_group_landing_order_manager"
                            class="oe_stat_button"
                            icon="fa-book">
                        <field name="landing_orders_count" widget="statinfo"
                                 groups="flex_landing_purchase_order.flex_landing_order_group_landing_order_manager"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>