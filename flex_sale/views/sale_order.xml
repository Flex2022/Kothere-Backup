<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="attention"/>
                <field name="department_id"/>
            </field>

            <xpath expr="//button[@name='action_draft']" position="attributes">
                <attribute name="groups">flex_sale.group_sale_order_draft</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="replace">
                <field name="name" invisible="display_type==False"/>
                <field name="product_id_arabic" string="Arabic Name"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="replace">
                <field name="name" widget="section_and_note_text" optional="hide"/>
                <field name="product_id_arabic" string="Arabic Name"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="trilla_load_per_pill"/>
            </xpath>


        </field>
    </record>
</odoo>


